{
    "compilerOptions": {
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": false,
        "preserveConstEnums": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "paths": {
            "@vaux/*": [
                "./src/*"
            ],
            "vauxcel": [
                "./src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
