{
    "compilerOptions": {
        "sourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strict": false,
        "preserveConstEnums": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "paths": {
            "@pixi/*": [
                "./src/*"
            ],
            "@sciner/pixi": [
                "./src"
            ]
        },
        "plugins": [
            // Source Transformer: 'type' defaults to 'program'
            {
                "transform": "ts-transform-paths"
            }
        ]
    },
    "include": [
        "src/**/*"
    ]
}
